
@using MvcShopping.Models



@{
    ViewBag.Title = "PlaceOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Order</h2>

<table class="table">
    <tr>
        <th>
            @Html.Display("ProductName")
        </th>
        <th>
            @Html.Display("ProductPrice")
        </th>
        <th>
            @Html.DisplayName("")
        </th>

        <th></th>
    </tr>

    @foreach (Cart item in ViewData["carts"] as IEnumerable<Cart>)
    {
        <tr>
            <td>
               @item.Product.ProductName;
            </td>

            <td>
               
            </td>

            <td>
                
             <img src="@item.Product.ImagePath" width="260" height="200" alt="">
                    
              
            </td>

        </tr>
    }

</table>


